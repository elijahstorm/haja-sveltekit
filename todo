function deploy_haja {
  cd ~/dev/apps/social/haja

  cd svkit
  rm -f -R .svelte-kit/build
  npm run build
  cd ..

  rm -f -R front/web/_
  mkdir front/web/_
  cp -f -R svkit/.svelte-kit/build/ front/web/_

  cd front
  flutter clean
  flutter build web
  cd ..

  rm -f -R web/public
  mkdir web/public
  cp -f -R front/build/web/ web/public

  cd web
  firebase deploy --only hosting
  cd ..
}